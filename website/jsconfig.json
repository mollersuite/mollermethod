{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"$lib": ["lib"],
			"$lib/*": ["lib/*"]
		}
	},
	"include": [
		"lib/**/*.d.ts",
		"lib/**/*.js",
		"lib/**/*.svelte",
		"routes/**/*.d.ts",
		"routes/**/*.js",
		"routes/**/*.svelte",
		"global.d.ts"
	]
}
