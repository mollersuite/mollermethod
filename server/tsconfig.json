{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "module": "commonjs",
    "noLib": true,
    "strict": true,
    "target": "ESNext",
    "typeRoots": [
      "node_modules/@rbxts"
    ],
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "out",
    "baseUrl": "src",
    "declaration": true,
    "jsx": "react",
    "jsxFactory": "Roact.createElement",
    "jsxFragmentFactory": "Roact.Fragment"
  }
}
