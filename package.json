{
	"name": "mollermethod",
	"description": "mlrmthd",
	"version": "5.0.0-beta.1",
	"devDependencies": {
		"@prettier/plugin-lua": "github:prettier/plugin-lua",
		"@rbxts/compiler-types": "^1.3.1-types.0",
		"@rbxts/exploit-types": "github:richie0866/exploit-types",
		"@rbxts/types": "^1.0.571",
		"prettier": "^2.4.1",
		"roblox-ts": "^1.3.1",
		"tsc-progress": "^1.0.4"
	},
	"scripts": {
		"build": "rbxtsc --type model && rojo build default.project.json -o static/mollermethod.rbxm",
		"deploy": "bash deploy.sh",
		"watch": "rojo build --watch default.project.json -o %~%/code/overlay/workspace/mollermethod.rbxm"
	},
	"prettier": {
		"arrowParens": "always",
		"bracketSpacing": true,
		"embeddedLanguageFormatting": "auto",
		"endOfLine": "lf",
		"htmlWhitespaceSensitivity": "css",
		"insertPragma": false,
		"jsxBracketSameLine": true,
		"jsxSingleQuote": false,
		"printWidth": 100,
		"proseWrap": "preserve",
		"quoteProps": "as-needed",
		"requirePragma": false,
		"semi": false,
		"singleQuote": true,
		"tabWidth": 2,
		"trailingComma": "none",
		"useTabs": true,
		"vueIndentScriptAndStyle": false,
		"overrides": [
			{
				"files": "*.html",
				"options": {
					"parser": "lua"
				}
			}
		]
	},
	"dependencies": {
		"@rbxts/roact": "^1.4.0-ts.2",
		"@rbxts/roact-hooks": "^0.3.0-ts.2",
		"@rbxts/services": "^1.2.0"
	}
}
